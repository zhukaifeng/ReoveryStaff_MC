<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/user_info_ll"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_user_head"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="12dp"
                        android:onClick="toSettingActivity" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="王小明"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_department"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="部门"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_qrcode"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/ic_qrcode"
                        android:onClick="toShowQrcode"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_scan"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/ic_sacn"
                        android:onClick="toScan"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="98dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/white_round15_bg"
                    android:elevation="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="12dp"
                        android:text="通知公告"
                        android:textSize="16dp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="25dp"
                        android:paddingTop="12dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="12dp"
                        android:scrollbars="none">

                        <TextView
                            android:id="@+id/news"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </ScrollView>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/user_info_ll"
                    android:background="@color/colorPrimary" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <LinearLayout
                    android:id="@+id/ll_sort_req"
                    android:layout_width="0dp"
                    android:layout_height="104dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round10_bg"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/icon_home_pd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分拣领单"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sort_in"
                    android:layout_width="0dp"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round10_bg"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/icon_home_qh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分拣入库"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:visibility="gone"
                android:paddingRight="30dp">

                <LinearLayout
                    android:id="@+id/ll_orders"
                    android:layout_width="0dp"
                    android:layout_height="104dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round10_bg"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/icon_home_pd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="派单任务"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_getGoodsList"
                    android:layout_width="0dp"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round10_bg"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/icon_home_qh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大件取货"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:visibility="gone"
                android:paddingRight="30dp">

                <LinearLayout
                    android:id="@+id/ll_createOrder"
                    android:layout_width="0dp"
                    android:layout_height="104dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round10_bg"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/icon_home_cj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单创建"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_orderSummary"
                    android:layout_width="0dp"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round10_bg"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/icon_home_hz" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接单汇总"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">
                <LinearLayout
                    android:id="@+id/ll_deviceAct"
                    android:layout_width="0dp"
                    android:layout_height="104dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round10_bg"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/icon_home_gl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备管理"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_checkOrderAct"
                    android:layout_width="0dp"
                    android:layout_height="104dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:visibility="invisible"

                    android:background="@drawable/white_round10_bg"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_marginBottom="8dp"
                        android:src="@mipmap/icon_home_pd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已审核"
                        android:textSize="16dp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_qrcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:gravity="center"
        android:onClick="toHideQrcode"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_sqrcode"
            android:layout_width="200dp"
            android:layout_height="200dp" />

    </LinearLayout>

</RelativeLayout>
