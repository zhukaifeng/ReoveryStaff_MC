<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_me_head"
            android:layout_width="87dp"
            android:layout_height="87dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_me_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/tv_me_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_me_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_white_5"
        android:orientation="vertical"
        android:paddingLeft="21dp"
        android:paddingRight="21dp">

        <LinearLayout
            android:id="@+id/ll_me_collect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_p12"
                android:layout_weight="1"
                android:text="我的收藏"
                android:textColor="@color/txt_c1"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:background="@drawable/ic_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_hint_c4" />

        <LinearLayout
            android:id="@+id/ll_me_his"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_p12"
                android:layout_weight="1"
                android:text="浏览历史"
                android:textColor="@color/txt_c1"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:background="@drawable/ic_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_hint_c4" />

        <LinearLayout
            android:id="@+id/ll_me_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_p12"
                android:layout_weight="1"
                android:text="版本更新"
                android:textColor="@color/txt_c1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_me_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/txt_c3"
                android:textSize="@dimen/txt_s16" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_hint_c4" />

        <LinearLayout
            android:id="@+id/ll_me_changepwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_p12"
                android:layout_weight="1"
                android:text="修改密码"
                android:textColor="@color/txt_c1"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:background="@drawable/ic_right" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_hint_c4" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_me_loginout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_me_center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_mine_loginout"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>